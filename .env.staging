# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@staging-db-host:5432/imanage_uploader_staging
POSTGRES_DB=imanage_uploader_staging
POSTGRES_USER=imanage_staging
POSTGRES_PASSWORD=CHANGE_ME_STAGING_DB_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@staging-redis-host:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Session Configuration
SESSION_SECRET=CHANGE_ME_STAGING_SESSION_SECRET

# iManage Configuration (Staging)
IMANAGE_SERVER_URL=https://staging.imanage.com
IMANAGE_CLIENT_ID=CHANGE_ME_STAGING_CLIENT_ID
IMANAGE_CLIENT_SECRET=CHANGE_ME_STAGING_CLIENT_SECRET

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_TIMEOUT=300000

# Logging Configuration
LOG_LEVEL=info

# Docker Configuration
APP_PORT=5000
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Configuration (for staging)
SSL_CERT_PATH=/etc/ssl/certs/staging-cert.pem
SSL_KEY_PATH=/etc/ssl/private/staging-key.pem
