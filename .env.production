# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@production-db-host:5432/imanage_uploader_prod
POSTGRES_DB=imanage_uploader_prod
POSTGRES_USER=imanage_prod
POSTGRES_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@production-redis-host:6379
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# Session Configuration
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET

# iManage Configuration (Production)
IMANAGE_SERVER_URL=https://your-imanage-server.com
IMANAGE_CLIENT_ID=CHANGE_ME_PRODUCTION_CLIENT_ID
IMANAGE_CLIENT_SECRET=CHANGE_ME_PRODUCTION_CLIENT_SECRET

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_TIMEOUT=300000

# Logging Configuration
LOG_LEVEL=warn

# Docker Configuration
APP_PORT=5000
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/production-cert.pem
SSL_KEY_PATH=/etc/ssl/private/production-key.pem

# Monitoring and Analytics (Optional)
SENTRY_DSN=CHANGE_ME_SENTRY_DSN
ANALYTICS_ID=CHANGE_ME_ANALYTICS_ID

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
