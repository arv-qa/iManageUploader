# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/imanage_uploader

# Server Configuration
NODE_ENV=development
PORT=5000

# iManage Integration (for production)
IMANAGE_SERVER_URL=https://your-imanage-server.com
IMANAGE_CLIENT_ID=your_client_id
IMANAGE_CLIENT_SECRET=your_client_secret

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_TIMEOUT=300000   # 5 minutes in milliseconds

# Logging
LOG_LEVEL=info
