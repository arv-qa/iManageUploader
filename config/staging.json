{
  "server": {
    "port": 5000,
    "host": "0.0.0.0",
    "cors": {
      "origin": ["https://staging.imanage-uploader.com"],
      "credentials": true
    }
  },
  "database": {
    "url": "${DATABASE_URL}",
    "ssl": {
      "rejectUnauthorized": false
    },
    "pool": {
      "min": 5,
      "max": 20
    }
  },
  "redis": {
    "url": "${REDIS_URL}",
    "keyPrefix": "imanage:staging:",
    "ttl": 7200
  },
  "session": {
    "secret": "${SESSION_SECRET}",
    "name": "imanage.sid",
    "cookie": {
      "secure": true,
      "httpOnly": true,
      "maxAge": 86400000,
      "sameSite": "strict"
    }
  },
  "upload": {
    "maxFileSize": 52428800,
    "allowedMimeTypes": [
      "application/pdf",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "text/plain",
      "text/csv"
    ],
    "uploadTimeout": 300000,
    "tempDir": "/app/uploads/temp",
    "storageDir": "/app/uploads/files"
  },
  "imanage": {
    "serverUrl": "${IMANAGE_SERVER_URL}",
    "clientId": "${IMANAGE_CLIENT_ID}",
    "clientSecret": "${IMANAGE_CLIENT_SECRET}",
    "apiVersion": "v1",
    "timeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 2000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": {
      "enabled": true,
      "filename": "/app/logs/staging.log",
      "maxSize": "50m",
      "maxFiles": "14d"
    },
    "console": {
      "enabled": true,
      "colorize": false
    }
  },
  "security": {
    "rateLimiting": {
      "enabled": true,
      "windowMs": 900000,
      "max": 200
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": {
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "scriptSrc": ["'self'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "connectSrc": ["'self'"]
        }
      }
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "path": "/api/health"
    },
    "metrics": {
      "enabled": true,
      "path": "/api/metrics"
    }
  }
}
